{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@thrico/shared": ["../shared/dist"],
      "@thrico/shared/*": ["../shared/dist/*"],
      "@thrico/logging": ["../logging/dist"],
      "@thrico/logging/*": ["../logging/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
