{
  "name": "@thrico/grpc",
  "version": "1.0.0",
  "description": "gRPC service definitions and clients",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run copy:proto",
    "copy:proto": "mkdir -p dist/proto && cp -r proto/*.proto dist/proto/",
    "dev": "tsc --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "proto:generate": "npm run build"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.14",
    "@grpc/proto-loader": "^0.7.10",
    "@thrico/shared": "*",
    "@thrico/logging": "*"
  },
  "devDependencies": {
    "@types/node": "^20.10.5"
  }
}
