{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@thrico/shared": ["../../packages/shared/dist"],
      "@thrico/shared/*": ["../../packages/shared/dist/*"],
      "@thrico/database": ["../../packages/database/dist"],
      "@thrico/database/*": ["../../packages/database/dist/*"],
      "@thrico/grpc": ["../../packages/grpc/dist"],
      "@thrico/grpc/*": ["../../packages/grpc/dist/*"],
      "@thrico/logging": ["../../packages/logging/dist"],
      "@thrico/logging/*": ["../../packages/logging/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
